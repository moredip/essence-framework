{
  "name": "essence-cli",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/essence-cli/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nrwl/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/essence-cli",
        "main": "packages/essence-cli/src/main.ts",
        "tsConfig": "packages/essence-cli/tsconfig.app.json"
      },
      "configurations": {
        "production": {
          "optimization": true,
          "extractLicenses": true,
          "inspect": false
        }
      }
    },
    "serve": {
      "executor": "@nrwl/js:node",
      "options": {
        "buildTarget": "essence-cli:build"
      },
      "configurations": {
        "production": {
          "buildTarget": "essence-cli:build:production"
        }
      }
    },
    "run": {
      "executor": "@nrwl/js:node",
      "options": {
        "buildTarget": "essence-cli:build",
        "watch": false,
        "inspect": false
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/essence-cli/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/essence-cli/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "tags": []
}
